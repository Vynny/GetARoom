package com.soen343.session;

import org.joda.time.DateTime;
import org.joda.time.format.ISODateTimeFormat;

import com.fasterxml.jackson.annotation.JsonCreator;
import com.fasterxml.jackson.annotation.JsonProperty;

public class ReservationSessionMessage {

	private long userId;
	private long roomId;
	private DateTime day;
	private Boolean valid;
	
	@JsonCreator
	public ReservationSessionMessage(@JsonProperty long userId, @JsonProperty long roomId, @JsonProperty String day) {
		this.valid = false;
		this.userId = userId;
		this.roomId = roomId;
		this.day = DateTime.parse(day, ISODateTimeFormat.date());
	}
	@JsonProperty
	public long getuserId() {
		return this.userId;
	}
	
	@JsonProperty
	public long getroomId() {
		return this.roomId;
	}
	
	@JsonProperty
	public Boolean getValid() {
		return valid;
	}
	
	public void setValid(Boolean valid) {
		this.valid = valid;
	}
	
	@JsonProperty
	public DateTime getDay() {
		return day;
	}
	
	public String toString() {
		return "userId: " + getuserId() + ", roomId: " + getroomId() + " , day: " + getDay().toDate();
	}
	
}
